<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.taihuoniao.shop.CartFragment" >
<com.taihuoniao.shop.widget.SwipeListView android:id="@+id/list" 
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"    
    />
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorDividerLte"
    android:gravity="center_vertical"
    >
<TextView 
    android:layout_marginLeft="10dp"
    android:textSize="@dimen/normal_text_size"
    android:textColor="@color/colorHighLight" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/total_cost"     
    />
<TextView android:id="@+id/total_cost"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/total_cost" 
    android:textSize="@dimen/normal_text_size"
    android:textColor="@color/colorHighLight"         
    />
<Space 
    android:layout_width="0dp"
    android:layout_height="1dp"
    android:layout_weight="1"
    />
<Button android:id="@+id/cartCheckout"
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:textSize="@dimen/normal_text_size"
    android:textColor="@color/color_red_gray_able" 
    android:background="@drawable/btn_round_rect_line_red"
    android:text="@string/cartCheckout"  
    android:layout_margin="10dp"
    />
</LinearLayout>
</LinearLayout>
